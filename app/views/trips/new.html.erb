
<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDUxuJVuvsR7Fy6J5ZBThZ4zAX79mrFGbI&amp;sensor=true">
    </script>

    <script type="text/javascript">
      function initialize() {
        var mapOptions = {
          center: new google.maps.LatLng(40.741, -73.9898),
          //center: new google.maps.LatLng(<%=@lat%>, <%=@lng%>),
          zoom: 15,
          mapTypeId: google.maps.MapTypeId.ROADMAP
          }; 

        map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);

        //geolocation
        /*
        if(navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(

            //callback success,failure methods
            //found in assets/javascripts/trips.js
            function(position) {
              lat = position.coords.latitude;
              lng = position.coords.longitude;
              addMarker(lat, lng, "current location");

            }, 
            handleNoGeolocation);
        }
        else { handleNoGeolocation(false); }
        */
        
        function getGeoLocation() {
          navigator.geolocation.getCurrentPosition(setGeoCookie, handleNoGeolocation);
        }

        function setGeoCookie(position) {
          var cookie_val = position.coords.latitude + "|" + position.coords.longitude;
          document.cookie = "lat_lng=" + escape(cookie_val);
          //addMarker(<%=@lat%>, <%=@lng%>, "YOU ARE HERE!");
        }
        
        getGeoLocation();
      
        //end geolocation
        //mark closest station to current location
        //addMarker(<%=@sta_lat%>, <%=@sta_lng%>, "CLOSEST STATION")        

        var bikeLayer = new google.maps.BicyclingLayer();
        bikeLayer.setMap(map);

        //add station markers
        <% get_stations.each do |sta| %>
          addMarker(<%= sta["latitude"] %>, 
            <%= sta["longitude"] %>, 
           "Bikes: <%= sta["availableBikes"] %> Docks: <%= sta["availableDocks"] %> <%=sta["label"]%>")
        <% end %> 
      } //end initialize

      google.maps.event.addDomListener(window,'load',initialize);

    </script>
  </head>

  <body>
    <header>
      <% if signed_in? %>
        Signed in as <%= current_user.email %>
        <%= link_to "sign out", destroy_user_session_path, method: "delete" %>        
        <% else %>
          <%= link_to "sign in", new_user_session_path %>
        <% end %>

    </header>
    <h1>Welcome to CitiBike</h1>
    <h4>Enter locations the same as on Google Maps</h4> 
    <h4>Current Location: close to <%=Geocoder.search("#{@lat}, #{@lng}")[0].address%></h4>
    <h4>Closest station to you: <%=@sta["label"]%>  (<%=@sta["availableBikes"]%> available bikes)</h4>

    <%= form_for @trip do |f| %>
      <%= f.label :origin %>
      <%= f.text_field :origin %> 
      <%= f.label :destination %> 
      <%= f.text_field :destination %> 
      <%= f.submit %>
    <% end %>
    
    <% if signed_in? %>
      Here are your favorite locations:
    <% end %>

    <div id="map-canvas" style="width: 700px; height: 900px"/>

  </body>
</html>
